<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f5ea">

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:id="@+id/buttonubahprof"
        android:text="Ubah Profil"
        android:background="#f5bdcf"
        android:textColor="#66061f" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/buttonsetalarm"
        android:background="#f5bdcf"
        android:textColor="#66061f"
        android:text="Jadwal Menstruasi"
        android:layout_marginTop="@dimen/activity_horizontal_margin"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/buttontampil"
        android:background="#f5bdcf"
        android:textColor="#66061f"
        android:text="Lihat Hasil Rekap"
        android:layout_marginTop="@dimen/activity_horizontal_margin"/>

</LinearLayout>