<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.apkit.sadari2.LatihanActivity"
    android:id="@+id/latihan_layout"
    android:background="@drawable/latihan1">


    <ImageButton
        android:layout_width="89dp"
        android:layout_height="35dp"
        android:maxWidth="@dimen/activity_vertical_margin"
        android:maxHeight="@dimen/activity_horizontal_margin"
        android:id="@+id/btn_lat_next"
        android:layout_gravity="bottom|end"
        android:src="@drawable/lanjut"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/videoView1"
        android:layout_alignEnd="@+id/videoView1" />

    <VideoView
        android:id="@+id/videoView1"
        android:layout_width="720px"
        android:layout_height="480px"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_alignBottom="@+id/videoView1"
        android:layout_alignTop="@+id/videoView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
