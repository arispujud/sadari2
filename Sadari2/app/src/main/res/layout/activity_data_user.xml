<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#f9f5ea"
    tools:context="com.example.apkit.sadari2.DataUserActivity">

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="Tanggal Lahir"
                android:id="@+id/tgllahir" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/tanggal"
                android:layout_below="@+id/tgllahir"
                android:hint="DDMMYYYY"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:text="Berat Badan"
                android:id="@+id/beratbadan"
                android:layout_below="@id/tanggal" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/berat"
                android:layout_below="@id/beratbadan"
                android:hint="(kg)"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:text="Riwayat Kanker"
                android:id="@+id/triwayat"
                android:layout_below="@id/berat"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:id="@+id/riwayat"
                android:layout_below="@+id/triwayat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:text="Usia Pertama Kali Menstruasi"
                android:id="@+id/textView"
                android:layout_below="@+id/riwayat" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/usiapertama"
                android:layout_below="@id/textView"
                android:hint="(tahun)"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:text="Mengkonsumsi Pil Hormon/KB"
                android:id="@+id/konsumsi"
                android:layout_below="@+id/usiapertama" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:id="@+id/konsumsipil"
                android:layout_below="@+id/konsumsi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:text="Saya"
                android:id="@+id/tidentitas"
                android:layout_below="@+id/konsumsipil"
                />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:id="@+id/identitas"
                android:layout_below="@+id/tidentitas" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:text="Simpan"
                android:id="@+id/buttonakun"
                android:background="#f99f51"
                android:textColor="#ffffff"
                android:layout_below="@+id/identitas"
                android:layout_alignParentRight="true"
                android:onClick="onInAkunClick"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
