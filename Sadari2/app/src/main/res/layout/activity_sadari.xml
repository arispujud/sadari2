<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.apkit.sadari2.SadariActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sadari_layout"
        android:background="@drawable/sadari1">
        <ImageButton
            android:layout_width="89dp"
            android:layout_height="35dp"
            android:maxWidth="@dimen/activity_vertical_margin"
            android:maxHeight="@dimen/activity_horizontal_margin"
            android:layout_margin="5dp"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:id="@+id/btn_sadari"
            android:layout_gravity="bottom"
            android:src="@drawable/lanjut"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</RelativeLayout>
